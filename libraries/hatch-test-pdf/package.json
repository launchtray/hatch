{
  "name": "@launchtray/hatch-test-pdf",
  "version": "0.11.2",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "rimraf dist && tsc",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "tmp": "^0.2.1",
    "pdf-image": "^2.0.0",
    "pixelmatch": "^5.2.1",
    "sharp": "^0.26.1",
    "pngjs": "^4.0.1"
  },
  "devDependencies": {
    "@types/pixelmatch": "^5.2.2",
    "@types/sharp": "^0.26.0",
    "@types/pngjs": "^3.4.2",
    "@types/node": "^12",
    "@types/pdf-image": "^2.0.0",
    "@types/tmp": "^0.2.0",
    "@types/node-fetch": "^2.5.7",
    "@types/jest": "^26.0.10",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",
    "rimraf": "3.0.0"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
