{
  "name": "@launchtray/hatch-util",
  "version": "0.21.0-alpha.73",
  "description": "Utilities used by several other hatch modules",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --max-warnings=0 --fix .",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc",
    "test": "jest --passWithNoTests"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@launchtray/hatch-eslint-config": "workspace:*",
    "@launchtray/hatch-test": "workspace:*",
    "@launchtray/tsyringe-async": "4.3.3",
    "@sentry/types": "^5",
    "@types/jest": "^27.5.2",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-config-airbnb-base": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^26",
    "jest": "^27.5.1",
    "rimraf": "3.0.0",
    "ts-jest": "^27.1.5",
    "typescript": "4.7.4"
  },
  "peerDependencies": {
    "@launchtray/tsyringe-async": "4.3.3",
    "@sentry/types": "^5"
  },
  "jest": {
    "testEnvironment": "<rootDir>/node_modules/@launchtray/hatch-test/dist/SpecInfoJestEnvironment",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
