{
  "name": "@launchtray/hatch-template-microservice",
  "version": "0.1.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "razzle start",
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --max-warnings=0 --fix .",
    "build": "rimraf build && razzle build --noninteractive",
    "test": "razzle test --env=jsdom --watchAll=false --passWithNoTests",
    "start:prod": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@launchtray/hatch-server": "0.21.0-alpha.48",
    "@launchtray/hatch-util": "0.21.0-alpha.48",
    "@launchtray/hatch-server-middleware": "0.21.0-alpha.48",
    "@launchtray/tsyringe-async": "4.3.3",
    "express": "^4",
    "invariant": "^2",
    "winston": "^3",
    "winston-transport": "^4",
    "@sentry/node": "^5",
    "@sentry/browser": "^5",
    "ws": "^7",
    "bufferutil": "^4",
    "utf-8-validate": "^5",
    "swagger-ui": "3.25.0",
    "isarray": "^2.0.5",
    "regenerator-runtime": "^0.13.3",
    "supports-color": "^7.2.0",
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "@types/ws": "^7",
    "@sentry/types": "^5",
    "@types/express": "^4",
    "@types/express-serve-static-core": "^4",
    "@types/node": "^18",
    "@launchtray/hatch-test": "0.21.0-alpha.48",
    "@launchtray/hatch-razzle-config": "0.21.0-alpha.48",
    "@types/supertest": "^2.0.8",
    "@types/superagent": "^4.1.4",
    "@types/webpack-env": "^1",
    "@types/jest": "^27.5.2",
    "@types/source-map": "0.5.2",
    "ajv": "^6.9.1",
    "jest": "^27.5.1",
    "superagent": "^8",
    "supertest": "^4.0.2",
    "ts-jest": "^27.1.5",
    "webpack": "4.46.0",
    "html-webpack-plugin": "4.5.2",
    "razzle": "4.2.17",
    "resolve": "^1.17.0",
    "@babel/core": "^7",
    "razzle-plugin-typescript": "4.2.17",
    "razzle-dev-utils": "4.2.17",
    "mini-css-extract-plugin": "0.9.0",
    "postcss": "8.2.12",
    "sockjs-client": "^1.4.0",
    "webpack-dev-server": "^3.11.0",
    "eslint": "^8",
    "@launchtray/hatch-eslint-config": "0.21.0-alpha.48",
    "@typescript-eslint/parser": "^5",
    "@typescript-eslint/eslint-plugin": "^5",
    "eslint-config-airbnb-base": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^26",
    "babel-preset-razzle": "4.2.17",
    "rimraf": "3.0.0",
    "typescript": "4.7.4"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "^(?!.*\\.(js|jsx|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
