{
  "name": "@launchtray/hatch-template-microservice",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "start": "razzle start",
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --max-warnings=0 --fix .",
    "build": "rimraf build && razzle build",
    "test": "razzle test --env=jsdom --watchAll=false --passWithNoTests",
    "start:prod": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@launchtray/hatch-server": "^0.15.7",
    "@launchtray/hatch-util": "^0.15.7",
    "@launchtray/hatch-server-middleware": "^0.15.7",
    "@launchtray/tsyringe-async": "4.3.2",
    "express": "^4",
    "invariant": "^2",
    "winston": "^3",
    "winston-transport": "^4",
    "@sentry/node": "^5",
    "@sentry/browser": "^5",
    "ws": "^7",
    "bufferutil": "^4",
    "utf-8-validate": "^5",
    "swagger-ui": "3.25.0",
    "isarray": "^2.0.5",
    "regenerator-runtime": "^0.13.3",
    "supports-color": "^7.2.0",
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "@types/ws": "^7",
    "@sentry/types": "^5",
    "@types/express": "^4",
    "@types/express-serve-static-core": "^4",
    "@types/node": "^14",
    "@launchtray/hatch-test": "^0.15.7",
    "@launchtray/hatch-razzle-config": "^0.15.7",
    "@types/supertest": "^2.0.8",
    "@types/superagent": "^4.1.4",
    "@types/webpack-env": "^1",
    "@types/jest": "^26.0.10",
    "@types/source-map": "0.5.2",
    "ajv": "^6.9.1",
    "jest": "^26.4.2",
    "superagent": "^5.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.1.3",
    "rimraf": "3.0.0",
    "webpack": "^4",
    "razzle": "3.1.8",
    "resolve": "^1.17.0",
    "@babel/core": "^7",
    "razzle-plugin-typescript": "3.1.8",
    "razzle-dev-utils": "3.1.8",
    "sockjs-client": "^1.4.0",
    "webpack-dev-server": "^3.11.0",
    "eslint": "^7.17.0",
    "@launchtray/hatch-eslint-config": "^0.15.7",
    "@typescript-eslint/parser": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "babel-preset-razzle": "3.1.8"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "^(?!.*\\.(js|jsx|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
